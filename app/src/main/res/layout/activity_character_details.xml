<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/character_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:text="character name" />

    <TextView
        android:id="@+id/status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/character_name_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:text="Status: Alive" />

    <TextView
        android:id="@+id/species_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/status_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Species: Human" />

    <TextView
        android:id="@+id/gender_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/species_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Gender: Male" />

    <TextView
        android:id="@+id/origin_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/gender_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Origin: Earth (C-137)" />

    <TextView
        android:id="@+id/location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/origin_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Location: Earth (Replacement Dimension)" />

</RelativeLayout>
