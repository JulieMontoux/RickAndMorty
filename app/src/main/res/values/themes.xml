<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.RickAndMorty" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here -->
    </style>

    <!-- Light theme -->
    <style name="Theme.RickAndMorty.Light" parent="Base.Theme.RickAndMorty">
        <!-- Primary branding color -->
        <item name="colorPrimary">@color/rick_blue</item>
        <item name="colorPrimaryDark">@color/portal_green</item>
        <item name="colorAccent">@color/morty_yellow</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Theme.RickAndMorty.Light.Toolbar</item>
        <!-- Button styles -->
        <item name="buttonStyle">@style/Theme.RickAndMorty.Light.Button</item>
        <item name="android:buttonStyle">@style/Theme.RickAndMorty.Light.Button</item>
    </style>

    <!-- Toolbar style -->
    <style name="Theme.RickAndMorty.Light.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/rick_blue</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:subtitleTextColor">@color/light_gray</item>
    </style>

    <!-- Button style -->
    <style name="Theme.RickAndMorty.Light.Button" parent="Widget.Material3.Button">
        <item name="android:background">@color/portal_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.RickAndMorty.Dark" parent="Base.Theme.RickAndMorty">
        <!-- Primary branding color -->
        <item name="colorPrimary">@color/rick_blue</item>
        <item name="colorPrimaryDark">@color/portal_green</item>
        <item name="colorAccent">@color/morty_yellow</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/black</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textColorPrimary">@color/light_gray</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
    </style>
</resources>
